@model IEnumerable<Blitz.Models.ProductModel>
@using PagedList;
@using PagedList.Mvc;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductDetails</title>
</head>
<body>
    <form asp-controller="Product" asp-action="SearchProduct"><span class="btn-group">
        <input class="form-control" type="text" name="name" placeholder="Search Key">
        <input class="p-1 ml-2 btn btn-sm btn-info " type="submit" value="Search" />     
        </span> </form>

