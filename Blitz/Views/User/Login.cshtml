@model Blitz.Models.UserModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>UserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="U_EmailId" class="control-label"></label>
                <input asp-for="U_EmailId" class="form-control" />
                <span asp-validation-for="U_EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="U_Password" class="control-label"></label>
                <input asp-for="U_Password" class="form-control" />
                <span asp-validation-for="U_Password" value = "Password"class="text-danger"></span>
           
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                    <p> @ViewBag.Message </p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
