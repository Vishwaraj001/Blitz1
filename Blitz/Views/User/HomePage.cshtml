@model IEnumerable<Blitz.Models.ProductModel>
@using PagedList;
@using PagedList.Mvc;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductDetails</title>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar float-right">

            @*<span>Welcome to </span>*@

            <span>@User.Identity.Name</span>

            <a class="btn btn-sm btn-danger" asp-action="Logout" asp-controller="User">SignOut</a>
        </div>

    }
    <form asp-controller="Product" asp-action="SearchProduct">
        <span class="btn-group">
            <input class="form-control" type="text" name="name" placeholder="Search Key">
            <input class="p-1 ml-2 btn btn-sm btn-info " type="submit" value="Search" />
        </span> 
    </form>

    

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubCategory_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product_Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubCategory_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Price)
                    </td>



                    <td>
                       
                        <a asp-action="AddToCart" asp-route-id="@item.Product_Id">Add To Cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
